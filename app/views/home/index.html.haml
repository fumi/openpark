#container
  #sidebar
    .sidebar-wrapper
      #features.panel.panel-default
        .panel-heading
          %h3.panel-title
            公園リスト
            %button#sidebar-hide-btn.btn.btn-xs.btn-default.pull-right{:type => "button"}
              = fa_icon "chevron-left"
        .panel-body
          %p
            .row
              .col-xs-8.col-md-8
                %input.form-control.search{:placeholder => "Filter", :type => "text"}/
              .col-xs-4.col-md-4
                %button#sort-btn.btn.btn-primary.pull-right.sort{"data-sort" => "feature-name", :type => "button"}
                  = fa_icon "sort"
                  \&nbsp;&nbsp;Sort
        .sidebar-table
          %table#feature-list.table.table-hover
            %thead.hidden
              %tr
                %th Icon
                %th Name
                %th Chevron
            %tbody.list
  #map
#loading
  .loading-indicator
    .progress.progress-striped.active
      .progress-bar.progress-bar-info.progress-bar-full

#legendModal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4.modal-title Map Legend
      .modal-body
        %p Map Legend goes here...
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
#featureModal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#feature-title.modal-title.text-primary
      #feature-info.modal-body
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
