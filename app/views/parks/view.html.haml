- content_for :head do
  %title= "#{@park[:label]} - Open Park"
  :css
    #map {
      width: 800px;
      height: 300px;
    }
    #galleria {
      width: 800px;
      height: 400px;
      background: #000;
    }

%h1= @park[:label]

%h2 基本データ
%table
  %tbody
    %tr
      %td 緯度
      %td= @park[:lat]
    %tr
      %td 経度
      %td= @park[:long]
    %tr
      %td 説明
      %td= @park[:description]

= map_to_leaflet(:center => { :latlng => [@park[:lat], @park[:long]], :zoom => 16 }, :markers => @markers )

#galleria
:javascript
  Galleria.loadTheme("#{asset_path('galleria/galleria.classic.min.js')}")
  Galleria.run('#galleria', {
      flickr: 'tags:Yokohama,Park,Kanazawa-ku,#{@park[:label]},横浜市金沢区'
  });

