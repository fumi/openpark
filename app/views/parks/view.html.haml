- content_for :head do
  %title= "#{@park[:label]} - Open Park"
  :css
    #map {
      width: 300px;
      height: 300px;
    }
    #galleria {
      width: 300px;
      height: 300px;
      background: #111;
    }

.container-fluid
  .row
    .col-md-offset-2.col-md-8
      %h1= @park[:label]
      %table.table.table-striped
        %tbody
          %tr
            %td 緯度
            %td= @park[:lat]
          %tr
            %td 経度
            %td= @park[:long]
          %tr
            %td 説明
            %td= @park[:description]
  .row
    .col-md-offset-2.col-md-4
      #galleria
        :javascript
          Galleria.loadTheme("#{asset_path('galleria.classic.js')}")
          Galleria.run('#galleria', {
            flickr: 'tags:Yokohama,Park,Kanazawa-ku,#{@park[:label]},横浜市金沢区'
          });
    .col-md-4
      = map_to_leaflet(:center => { :latlng => [@park[:lat], @park[:long]], :zoom => 16 }, :markers => @markers )
